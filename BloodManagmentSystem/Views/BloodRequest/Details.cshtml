@using System.Reflection
@using BloodManagmentSystem.Core.Models
@model BloodManagmentSystem.Core.ViewModels.BloodRequestDetailsViewModel

@{
    ViewBag.Title = "Request Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>Request Details</h1>
</div>

<div class="jumbotron">
    <h1>@Model.Donors.Count()</h1>
 <p>Donors match <span class="blood-type">@Model.Request.BloodType.GetDisplayName()</span> blood type</p>
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">Donors</div>

        <!-- Table -->
        <table class="table">
            <thead>
            <td>Name</td>
            <td>Email</td>
            </thead>
            @foreach (var donor in @Model.Donors)
            {
                <tr>
                    <td>@donor.Name</td>
                    <td>@donor.Email</td>
                </tr>
            }
        </table>
    </div>
    <div>
        <a class="btn btn-success" href="@Html.Action("SendEmails", TempData["Donors"] = Model.Donors)">Send Email</a>
    </div>
</div>

