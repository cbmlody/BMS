@model BloodManagmentSystem.Core.ViewModels.BloodRequestFormViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form>
    <div class="form-group">
        @Html.LabelFor(m => m.BloodType)
        @Html.EnumDropDownListFor(m => m.BloodType, "Select BloodRequests Type", new { @class="form-control"}) 
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DueDate)
        @Html.TextBoxFor(m => m.DueDate, new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Bank)
        @Html.DropDownListFor(m => m.Bank, new SelectList(Model.Banks, "Id", "Name"), "Select BloodRequests Bank", new { @class="form-control"})
    </div> 
    <div class="form-group">
        @Html.LabelFor(m => m.City)
        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
    </div>
   
    <button type="submit" class="btn btn-default">Submit</button>
</form>