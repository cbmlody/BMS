@model BloodManagmentSystem.Models.BloodRequest
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form>
    <div class="form-group">
        @Html.LabelFor(m => m.BloodType)
        @Html.TextBoxFor(m => m.BloodType, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DueDate)
        @Html.TextBoxFor(m => m.DueDate, new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Bank)
        @Html.TextBoxFor(m => m.Bank, new { @class = "form-control" })
    </div> 
    <div class="form-group">
        @Html.LabelFor(m => m.City)
        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
    </div>
   
    <button type="submit" class="btn btn-default">Submit</button>
</form>